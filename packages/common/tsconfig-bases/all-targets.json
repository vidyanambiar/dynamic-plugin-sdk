{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/__mocks__/*"],
  "ts-node": {},
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
